{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update current module",
            "type": "shell",
            "command": "odoo-bin -u ${relativeFileDirname} --stop-after-init",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Update all modules",
            "type": "shell",
            "command": "odoo-bin -u all --stop-after-init"
        }
    ]
}