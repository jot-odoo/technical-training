<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- library.book tree view -->
        <record id="library_book_view_tree" model="ir.ui.view">
            <field name="name">library.book.view.tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <!-- <field name="cover" widget="image" /> -->
                    <field name="title" />
                    <field name="author_ids" widget="many2many_tags" />
                    <field name="publisher_id" />
                    <field name="publication_date" />
                    <field name="genre_ids" widget="many2many_tags" />
                    <field name="tag_ids" widget="many2many_tags" />
                </tree>
            </field>
        </record>
        <!-- library.book form view -->
        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">library.book.view.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <h1>
                            <field name="title" />
                        </h1>
                        <p>
                            <field name="author_ids" widget="many2many_tags" />
                        </p>
                        <group>
                            <group>
                                <field name="cover" widget="image" nolabel="1" />
                            </group>
                            <group>
                                <field name="publisher_id" />
                                <field name="publication_date" />
                                <field name="genre_ids" widget="many2many_tags" />
                                <field name="tag_ids" widget="many2many_tags" />
                                <field name="isbn" />
                                <field name="description" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Copies">
                                <field name="copy_ids">
                                    <tree>
                                        <field name="serial_number" />
                                        <field name="is_available" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>