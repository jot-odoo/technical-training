<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- library.copy tree view -->
        <record id="library_copy_view_tree" model="ir.ui.view">
            <field name="name">library.copy.view.tree</field>
            <field name="model">library.copy</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="book_id" />
                    <field name="serial_number" />
                    <field name="location" />
                    <field name="is_available" />
                </tree>
            </field>
        </record>
        <!-- library.copy form view -->
        <record id="library_copy_view_form" model="ir.ui.view">
            <field name="name">library.copy.view.form</field>
            <field name="model">library.copy</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="book_id" />
                                <field name="location" />
                            </group>
                            <group></group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>